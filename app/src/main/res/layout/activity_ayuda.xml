<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cubikosolutions.dampgl.ejemplopcpartes.Ayuda">


    <TextView
        android:id="@+id/txtSoporte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="InformaciÃ³n soporte "
        android:textColor="#0033FF"
        android:textSize="30dp"
        android:textStyle="bold"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail: soporte@cubikosolutions.com"
        android:textColor="#0033FF"
        android:textSize="25dp"

        android:layout_marginTop="15dp"
        android:layout_below="@+id/txtSoporte"
        android:layout_alignStart="@+id/txtSoporte" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tlf: 646438962"
        android:textColor="#0033FF"
        android:textSize="25dp"
        android:id="@+id/txtTlf"
        android:layout_below="@+id/txtEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_movil"
